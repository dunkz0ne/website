<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Logo</th>
      <th>Name</th>
      <th>Color</th>
      <th>Api</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><img src="https://cdn.nba.com/logos/nba/<%= team.api %>/primary/L/logo.svg" /></td>
        <td><%= team.name %></td>
        <td><%= team.color %></td>
        <td><%= team.api %></td>
        <td><%= link_to 'Show', team %></td>
      </tr>
    <% end %>
  </tbody>
  <%= link_to 'Back', user_dashboard_path %>
</table>
