<h2 class="text-center my-4">CIAO BELLI</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8 text-center">

      <% if notice.present? %>
        <div class="alert alert-info alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <% if flash[:alert].present? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <!-- Facebook Login Button -->
      <%= form_tag('/users/auth/facebook', method: 'post', class: 'my-3') do %>
        <button class="btn btn-primary btn-lg w-100" type="submit" aria-label="Sign in with Facebook">
          <i class="fab fa-facebook-f"></i> Sign In with Facebook
        </button>
      <% end %>

      <!-- Sign In Form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { method: :post }) do |f| %>
        <div class="form-group my-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, autofocus: true, class: 'form-control form-control-lg', aria: { describedby: 'emailHelp' } %>
        </div>

        <div class="form-group my-3">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control form-control-lg' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-check my-3 text-start">
            <%= f.check_box :remember_me, class: 'form-check-input', id: 'rememberMeCheck' %>
            <%= f.label :remember_me, class: 'form-check-label', for: 'rememberMeCheck' %>
          </div>
        <% end %>

        <div class="form-group my-3">
          <%= f.submit "Sign In", class: 'btn btn-primary btn-lg w-100', aria: { label: "Sign In" } %>
        </div>
      <% end %>

      <!-- Sign Up Button -->
      <a class="btn btn-success btn-lg w-100 my-4" href="sign_up" role="button">
        <i class="fas fa-user-plus"></i> Sign Up
      </a>

      <!-- Sign Out Button -->
      <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-danger btn-lg w-100 my-3', aria: { label: 'Sign Out' } %>
    </div>
  </div>
</div>
